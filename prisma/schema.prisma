// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  PROVIDER
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELED
  REFUNDED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  image         String?
  role          Role      @default(USER)
  provider      ProviderProfile?
  bookings      Booking[] @relation("UserBookings")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth
  accounts Account[]
  sessions Session[]
}

model ProviderProfile {
  id            String           @id @default(cuid())
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String           @unique
  displayName   String
  shortBio      String?
  imageUrl      String?
  rating        Float?           // can mirror/aggregate from reviews
  categories    String[]         // quick start; you may normalize later
  basePrice     Int?
  services      ServiceOffering[]
  availability  AvailabilitySlot[]
  bookings      Booking[]        @relation("ProviderBookings")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ServiceOffering {
  id            String           @id @default(cuid())
  provider      ProviderProfile  @relation(fields: [providerId], references: [id], onDelete: Cascade)
  providerId    String
  title         String
  description   String?
  durationMin   Int              // 60, 90, etc
  price         Int
  active        Boolean          @default(true)
  bookings      Booking[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model AvailabilitySlot {
  id            String           @id @default(cuid())
  provider      ProviderProfile  @relation(fields: [providerId], references: [id], onDelete: Cascade)
  providerId    String
  start         DateTime
  end           DateTime
  capacity      Int              @default(1)
  createdAt     DateTime @default(now())
}

model Booking {
  id            String           @id @default(cuid())
  user          User             @relation("UserBookings", fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  provider      ProviderProfile  @relation("ProviderBookings", fields: [providerId], references: [id], onDelete: Cascade)
  providerId    String
  service       ServiceOffering? @relation(fields: [serviceId], references: [id])
  serviceId     String?
  start         DateTime
  end           DateTime
  address       String?
  notes         String?
  status        BookingStatus    @default(PENDING)
  price         Int
  paymentIntent String?          // Stripe id later
  createdAt     DateTime         @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  whoId     String?
  action    String
  payload   Json?
  createdAt DateTime @default(now())
}

/* NextAuth tables (standard) */
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}
